<!DOCTYPE html>
<html>
<head>
  <title>Intraday Scanner</title>
  <meta http-equiv="refresh" content="60">
  <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
</head>
<body>

<h1>ðŸ“Š Intraday Scanner</h1>

<div class="container">

  <!-- ================= GAINERS ================= -->
  <div class="box">
    <h2>ðŸŸ¢ Gainers</h2>
    <table>
      <tr>
        <th>Stock</th>
        <th>LTP</th>
        <th>% Chg</th>
        <th>LAST_AVG_VOL</th>
        <th>GAP UP</th>
        <th>10AM HIGH</th>
        <th>12PM HIGH</th>
        <th>Total Vol</th>
      </tr>

      {% for r in gainers %}
      <tr>
        <td><a href="/chart/{{ r.symbol }}" target="_blank" class="stock-link">{{ r.symbol }}</a></td>
        <td>{{ r.ltp }}</td>
        <td class="green">{{ r.change }}%</td>
        <td>{{ r.last_avg_vol }}</td>
        <td class="green">{{ r.gap_high }}%</td>
        <td class="green">{{ r.pct_10_high }}%</td>
        <td class="green">{{ r.pct_12_high }}%</td>
        <td>{{ r.total_vol }}</td>
      </tr>
      {% endfor %}
    </table>
  </div>

  <!-- ================= LOSERS ================= -->
  <div class="box">
    <h2>ðŸ”´ Losers</h2>
    <table>
      <tr>
        <th>Stock</th>
        <th>LTP</th>
        <th>% Chg</th>
        <th>LAST_AVG_VOL</th>
        <th>GAP DOWN</th>
        <th>10AM LOW</th>
        <th>12PM LOW</th>
        <th>Total Vol</th>
      </tr>

      {% for r in losers %}
      <tr>
        <td><a href="/chart/{{ r.symbol }}" target="_blank" class="stock-link">{{ r.symbol }}</a></td>
        <td>{{ r.ltp }}</td>
        <td class="red">{{ r.change }}%</td>
        <td>{{ r.last_avg_vol }}</td>
        <td class="red">{{ r.gap_low }}%</td>
        <td class="red">{{ r.pct_10_low }}%</td>
        <td class="red">{{ r.pct_12_low }}%</td>
        <td>{{ r.total_vol }}</td>
      </tr>
      {% endfor %}
    </table>
  </div>

</div>

</body>
</html>

