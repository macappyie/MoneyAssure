<!DOCTYPE html>
<html>
<head>
  <title>Intraday Dashboard</title>
  <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
</head>
<body>

<h1>ðŸ“Š Intraday Scanner</h1>

<div class="section">
  <div class="container">

    <!-- ================= GAINERS ================= -->
    <div class="box">
      <h2>ðŸŸ¢ Gainers</h2>
      <table>
        <tr>
          <th>Stock</th>
          <th>LTP</th>
          <th>% Chg</th>
          <th>9:15 Vol</th>
          <th>% 9:15 HIGH</th>
          <th>% 10 AM HIGH</th>
          <th>Total Vol</th>
        </tr>

        {% for r in gainers %}
        <tr>
          <td>{{ r.symbol }}</td>
          <td>{{ r.ltp }}</td>
          <td class="green">{{ r.change }}%</td>
          <td>{{ r.vol_915 }}</td>
          <td class="green">{{ r.pct_915_high }}%</td>
          <td class="green">{{ r.pct_10_high }}%</td>
          <td>{{ r.total_vol }}</td>
        </tr>
        {% endfor %}
      </table>
    </div>

    <!-- ================= LOSERS ================= -->
    <div class="box">
      <h2>ðŸ”´ Losers</h2>
      <table>
        <tr>
          <th>Stock</th>
          <th>LTP</th>
          <th>% Chg</th>
          <th>9:15 Vol</th>
          <th>% 9:15 LOW</th>
          <th>% 10 AM LOW</th>
          <th>Total Vol</th>
        </tr>

        {% for r in losers %}
        <tr>
          <td>{{ r.symbol }}</td>
          <td>{{ r.ltp }}</td>
          <td class="red">{{ r.change }}%</td>
          <td>{{ r.vol_915 }}</td>
          <td class="red">{{ r.pct_915_low }}%</td>
          <td class="red">{{ r.pct_10_low }}%</td>
          <td>{{ r.total_vol }}</td>
        </tr>
        {% endfor %}
      </table>
    </div>

  </div>
</div>

</body>
</html>

